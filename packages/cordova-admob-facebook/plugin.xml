<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-admob-facebook" version="0.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>cordova-admob-facebook</name>
  <description>Cordova AdMob Mediation Plugin for Facebook</description>

  <engines>
    <engine name="cordova" version=">=3" />
  </engines>

  <platform name="android">
    <framework src="com.facebook.android:audience-network-sdk:5.3.0" />
    <framework src="com.google.ads.mediation:facebook:5.3.0.0" />

    <!-- Prevents compilation error: https://developer.android.com/studio/build/multidex.html -->
    <!-- when add additional mediation plugins -->
    <dependency id="cordova-plugin-multidex" />
  </platform>

  <platform name="ios">
    <pods-config ios-min-version="9.0" use-frameworks="true" />
    <pod id="FBAudienceNetwork" version="4.44.0" />
    <pod id="GoogleMobileAdsMediationFacebook" version="4.44.0.0" />

    <!-- Prevents compilation failures when using pod's id with additional mediations plugins -->
    <dependency id="cordova-plugin-cocoapod-support" />
  </platform>
</plugin>
